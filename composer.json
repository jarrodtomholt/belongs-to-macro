{
    "name": "jarrodtomholt/belongs-to-macro",
    "description": "Automatically add index and constraints to your migration foreignIdFor entities with a simple macro",
    "keywords": [
        "jarrodtomholt",
        "belongs-to-macro"
    ],
    "homepage": "https://github.com/jarrodtomholt/belongs-to-macro",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Jarrod Tomholt",
            "email": "jarrodtomholt@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/support": "^8.0|^9.0|^10"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "JarrodTomholt\\BelongsToMacro\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JarrodTomholt\\BelongsToMacro\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "JarrodTomholt\\BelongsToMacro\\BelongsToMacroServiceProvider"
            ]
        }
    }
}
